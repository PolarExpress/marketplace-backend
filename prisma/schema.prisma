datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["linux-musl-openssl-3.0.x", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x", "debian-openssl-1.1.x", "darwin-arm64"]
}

enum AddonCategory {
    VISUALISATION
    MACHINE_LEARNING
    DATA_SOURCE
}

model Author{
    userId String @unique
}

model Addon {
    id String @id() @default(cuid())
    name String
    summary String
    icon String

    category AddonCategory
    installedBy User[]

    author      Author @relation(fields: [authorId], references: [id])
    authorId    String 
}
