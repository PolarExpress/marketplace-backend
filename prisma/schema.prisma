datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["linux-musl-openssl-3.0.x", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x"]
}

enum AddonCategory {
    VISUALISATION
    MACHINE_LEARNING
    DATA_SOURCE
}

model User {
    id String @id() @default(cuid())
    name String
    /// @email
    email String @unique()

    author Author?
    installedAddons Addon[]
}

model Author{
    id String @id() @default(cuid())
    name String

    user User @relation(fields:[userId], references: [id])
    userId String @unique

    createdAddons Addon[]
}

model Addon {
    id String @id() @default(cuid())
    name String
    summary String
    icon String

    category AddonCategory
    installedBy User[]

    author      Author @relation(fields: [authorId], references: [id])
    authorId    String 
}